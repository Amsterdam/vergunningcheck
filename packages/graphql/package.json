{
  "name": "@vergunningcheck/graphql",
  "private": true,
  "version": "2.2.0",
  "keywords": [],
  "author": "Gemeente Amsterdam",
  "license": "ISC",
  "engines": {
    "node": "14"
  },
  "description": "Backend/graphql-server for the Vergunningcheck application.",
  "main": "server.js",
  "scripts": {
    "prestart": "npm install",
    "start": "NODE_ENV=development nodemon .",
    "start:prod": "NODE_ENV=production node .",
    "build:netlify": "npm ci",
    "test": "CONFIG_FILE=test jest",
    "test:record": "POLLY_MODE=record npm test",
    "test:coverage": "npm test -- --watchAll=false --collect-coverage",
    "precommit": "lint-staged",
    "lint": "eslint ."
  },
  "dependencies": {
    "apollo-server": "^2.18.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "dataloader": "^2.0.0",
    "debug": "^4.1.1",
    "dotenv-flow": "^3.2.0",
    "express": "^4.17.1",
    "express-graphql": "^0.11.0",
    "feature-policy": "^0.5.0",
    "graphql": "^15.1.0",
    "graphql-depth-limit": "^1.1.0",
    "helmet": "^4.0.0",
    "lodash.get": "^4.4.2",
    "lodash.merge": "^4.6.2",
    "lodash.uniqby": "^4.7.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "redis": "^3.0.2",
    "redis-mock": "^0.52.0",
    "serverless-http": "^2.5.0",
    "uuid": "^8.3.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@pollyjs/adapter-fetch": "^5.0.0",
    "@pollyjs/adapter-node-http": "^5.0.0",
    "@pollyjs/core": "^5.0.0",
    "@pollyjs/persister-fs": "^5.0.0",
    "@spotify/polly-jest-presets": "^3.1.1",
    "eslint": "^7.2.0",
    "eslint-config-airbnb-base": "^14.1.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.21.1",
    "jest": "^26.0.1",
    "lint-staged": "^10.2.9",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "request": "^2.88.2",
    "setup-polly-jest": "^0.9.1"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/*.js"
    ],
    "testPathIgnorePatterns": [
      "config/test"
    ],
    "setupFilesAfterEnv": [
      "@spotify/polly-jest-presets"
    ],
    "globals": {
      "pollyConfig": {
        "expiresIn": "2 months"
      }
    }
  },
  "lint-staged": {
    "*.{js}": [
      "prettier --write",
      "eslint --fix --max-warnings=0",
      "jest --bail --findRelatedTests"
    ]
  }
}
