{
  "name": "@vergunningcheck/e2e",
  "private": true,
  "version": "2.6.0",
  "description": "Module for e2e and cross-browser testing of the Vergunningcheck application.",
  "keywords": [],
  "author": "Gemeente Amsterdam",
  "license": "ISC",
  "main": "puppeteer/basic.js",
  "scripts": {
    "test": "jest",
    "nightwatch:browserstack": "node scripts/local.runner.js -c nightwatch/browserstack.conf.js -e chrome,firefox,safari",
    "localhost:test": "run-p localhost:test:puppeteer localhost:test:nightwatch:*",
    "localhost:test:puppeteer": "find puppeteer/tests/*.js -exec ts-node {} \\;",
    "localhost:test:nightwatch": "run-p localhost:test:nightwatch:*",
    "localhost:test:nightwatch:firefox": "kill-port 4444 || : && npx nightwatch nightwatch/tests/*.js -e firefox",
    "localhost:test:nightwatch:chrome": "npx nightwatch nightwatch/tests/*.js -e chrome"
  },
  "devDependencies": {
    "@types/chai": "^4.2.13",
    "@types/mkdirp": "^1.0.1",
    "@types/puppeteer": "^3.0.2",
    "@vergunningcheck/mocking": "^2.6.0",
    "chai": "^4.2.0",
    "chromedriver": "^87.0.5",
    "geckodriver": "^1.20.0",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "mkdirp": "^1.0.4",
    "nightwatch": "^1.6.2",
    "npm-run-all": "^4.1.5",
    "puppeteer": "^5.3.1",
    "selenium-server": "^3.141.59",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@types/nightwatch": "^1.3.3",
    "browserstack-local": "^1.4.8",
    "selenium-webdriver": "^4.0.0-beta.1"
  }
}
