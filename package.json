{
  "name": "vergunningcheck",
  "private": true,
  "repository": {
    "url": "https://github.com/Amsterdam/vergunningcheck"
  },
  "engines": {
    "node": "13.1"
  },
  "scripts": {
    "start": "lerna run --parallel --no-bail start",
    "start:prod": "lerna run --parallel start:prod",
    "test": "CI=true lerna run test",
    "lint": "lerna run lint",
    "postinstall": "lerna bootstrap",
    "release": "git checkout develop && git pull && lerna-changelog && lerna publish && git pull-request -m 'Release'"
  },
  "devDependencies": {
    "husky": "^4.2.5",
    "lerna": "^3.21.0",
    "lerna-changelog": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit"
    }
  }
}
