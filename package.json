{
  "name": "chappie-1.0",
  "private": true,
  "repository": {
    "url": "https://github.com/Amsterdam/vergunningcheck"
  },
  "engines": {
    "node": "13.1"
  },
  "scripts": {
    "start": "lerna run --parallel --no-bail start",
    "start:prod": "lerna run --parallel start:prod",
    "test": "CI=true lerna run test",
    "lint": "lerna run lint",
    "postinstall": "lerna bootstrap",
    "release": "lerna-changelog && lerna publish"
  },
  "devDependencies": {
    "husky": "^4.2.3",
    "lerna": "^3.20.2",
    "lerna-changelog": "^1.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": [
        "lerna run --concurrency 1 --stream precommit"
      ]
    }
  }
}
